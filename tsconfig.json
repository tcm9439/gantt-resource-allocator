{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "outDir": "dist",
        "declaration": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "emitDeclarationOnly": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "paths": {
            "~": [
                "./src/"
            ],
            "~/*": [
                "./src/*"
            ],
            "assets": [
                "./assets"
            ],
            "public": [
                "./public"
            ],
            "public/*": [
                "./public/*"
            ],
            "#components": [
                "./components"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "test/**/*.ts",
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}